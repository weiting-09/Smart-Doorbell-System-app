<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 實心底色 -->
    <solid android:color="#4D4D4D" />

    <!-- 四個角都使用圓角 8dp -->
    <corners android:radius="8dp" />

    <!-- 可選：控制內邊距 -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
